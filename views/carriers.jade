extend layout

block topbar
  .topbar-left
    ol.breadcrumb
      li.crumb-icon
        a(href='/admin')
          span.glyphicon.glyphicon-home
      li.crumb-active
        a(href='/admin/carrier') Carriers
  .topbar-right
    ol.breadcrumb
      a(href='/admin/carrier/new')
        button.btn.btn-info(class='button') Create new

block content
  .row
    .col-md-12
      .panel.panel-visible
        .panel-heading
          span.panel-title
            span.glyphicon.glyphicon-list-alt
            |  
        .panel-body
          table.table.table-hover
            thead
              tr
                th(onclick='javascript:location.href="/admin/carrier?sort=id"') #
                th(onclick='javascript:location.href="/admin/carrier?sort=firstname"') First Name
                th(onclick='javascript:location.href="/admin/carrier?sort=lastname"') Last Name
                th(onclick='javascript:location.href="/admin/carrier?sort=zip"') ZIP
                th(onclick='javascript:location.href="/admin/carrier?sort=email"') E-mail
                th.btn-danger Password
                th Find parcels
            tbody
              if result
                each it in result
                  tr(onclick='javascript:location.href="/admin/carrier/#{it.id}"')
                    td= it.id
                    td= it.firstname
                    td= it.lastname
                    td= it.zip
                    td= it.email
                    td.btn-danger= it.passwordCopy
                    td
                      a(href='/admin/findparcels/#{it.id}')
                        button.btn.btn-info.btn-gradient(type='button')
                          i.glyphicon.glyphicon-gift
          .dataTables_info
            | Page #{page}
          .dataTables_paginate.paging_bs_normal
            ul.pagination.pagination-sm
              - for (var i=1; i<=pages; i++)
                if (i == page)
                  li.active
                    a(href='/admin/carrier?sort=#{sort}&page=#{i}') #{i}
                else
                  li
                    a(href='/admin/carrier?sort=#{sort}&page=#{i}') #{i}
