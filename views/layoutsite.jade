    // app
    .app
      // header
      header.header
        a.logo(href='/') #{__('PACKET24')}
        ul.nav
          li
            a(href='/') #{__('Home')}
          li
            if user && user.parcelCount
              a(href='/dashboard')
                | #{__('My Parcels')} - 
                span #{user.parcelCount}
          li
            a(href='/faq') #{__('FAQ')}
          li
            a(href='/') #{__('Prices')}
          if user
            li
              a(href='/logout') #{__('Logout')}
          if lang != 'en'
            li
              a(href='javascript:setLanguage("en");') EN
          if lang != 'de'
            li
              a(href='javascript:setLanguage("de");') DE
          //li
            select#langSelect
              option(selected=lang == 'de') Deutch
              option(selected=lang == 'en') English
      // header section
      block header  
      // content
      block content
      // footer
      footer.footer
        .container
          .nav
            h4 #{__('HOME')}
            ul
              li
                a(href='/') #{__('Send a parcel')}
              li
                a(href='/') #{__('Deliver parcel')}
              li.devider
              li
                a(href='/') #{__('Parcel status')}A
          .nav
            h4 #{__('FAQ')}
            ul
              li
                a(href='/faq') #{__('How it works?')}
              li
                a(href='/faq') #{__('How to register?')}
              li
                a(href='/faq') #{__('Terms and conditions')}
          .nav
            h4 #{__('PRICES')}
            ul
              li
                a(href='/')
                  | #{__('Common prices')} 
                  br
                  | #{__('for Germany')}
              li
                a(href='#') #{__('Why better than Post?')}
          .clear
          ul.terms
            li
              a(href='/')
                i.fa.fa-align-left
                |  #{__('Booking Terms &amp; Conditions')}
            li
              a(href='/')
                i.fa.fa-align-left
                |  #{__('Web usage Terms &amp; Conditions')}
          span.title #{__('Packet24')}
          span.copyright
            small &copy; #{__('2015 Delticom. ALL RIGHTS RESERVED.')}
            em #{__('Hanover, Germany')}
    // /app
    // JS
    script(src='/vendor/jquery/jquery-1.9.1.min.js')
    script(src='/vendor/jquery/jquery-migrate-1.1.1.min.js')
    script(src='/vendor/jquery/jquery.maskedinput-1.2.2.min.js')
    script(src='/vendor/jquery/jquery.ui.widget.min.js')
    script(src='/vendor/jquery/jquery.selectBoxIt.min.js')
    script(src='/vendor/jquery/jquery.ui.datepicker.min.js')
    script(src='/vendor/jquery/feelform.min.js')
    script(src='/vendor/jquery/jquery.bpopup.min.js')
    script(src='/vendor/jquery/jquery.easing.min.js')
    script(src='/vendor/moment/moment-with-locales.min.js')
    script(src='/js/main.js')
    script(type='text/javascript').
      function setLanguage(lang) {
        $.ajax({
          url: '/setlanguage',
          type: 'POST',
          data: {lang: lang},
          success: function(data) {
            console.log('Set language result:', data);
            // reload
            location.reload();
          },
          error: function(err) {
            console.log('Set language error:', err);
          }
        });
      }
      $('#langSelect').on('change', function(event) {
        console.log('Lang select', event.currentTarget.value);
        setLanguage(event.currentTarget.value);
      });
    block script