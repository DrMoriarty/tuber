                li #{__('Arrival:')} #{moment(parcel.arriveDate).format('LL')}
              //a.more(href='#')
                i.icons-plus
                | #{__('MORE INFO')}
              a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.fastest.id}&m=1&delivery=#{drivers.fastest.delivery}')
                | #{__('GET IT')}
                br
                | #{__('NOW')}
            //else
              a.orange_button(href='#')
                | #{__('NOT FOUND')}
          if drivers.custom1.available
            article.offers
              figure
                img(src='/img/price_eco.png', alt='')
                if drivers.custom1.available
                  figcaption #{__('FROM')} &euro;#{drivers.custom1.price}
                else
                  figcaption #{__('Not found')}
              strong #{drivers.custom1.title}
              ul
                li #{__('Expected dates:')}
                //li #{__('Departure:')} #{drivers.custom1.pickupDate}
                //li #{__('Arrival:')} #{drivers.custom1.arriveDate}
                li #{__('Departure:')} #{moment(parcel.pickupDate).format('LL')}
                li #{__('Arrival:')} #{moment(parcel.arriveDate).format('LL')}
              //a.more(href='#')
                i.icons-plus
                | #{__('MORE INFO')}
              a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.custom1.id}&m=1&delivery=#{drivers.custom1.delivery}')
                | #{__('GET IT')}
                br
                | #{__('NOW')}
            //else
              a.orange_button(href='#')
                | #{__('NOT FOUND')}
          if drivers.custom2.available && (!drivers.fastest.available || !drivers.cheapest.available)
            article.offers
              figure
                img(src='/img/price_eco.png', alt='')
                if drivers.custom2.available
                  figcaption #{__('FROM')} &euro;#{drivers.custom2.price}
                else
                  figcaption #{__('Not found')}
              strong #{drivers.custom2.title}
              ul
                li #{__('Expected dates:')}
                li #{__('Departure:')} #{moment(parcel.pickupDate).format('LL')}
                li #{__('Arrival:')} #{moment(parcel.arriveDate).format('LL')}
                i.icons-plus
                | #{__('MORE INFO')}
              a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.custom2.id}&m=1&delivery=#{drivers.custom2.delivery}')
                | #{__('GET IT')}
                br
                | #{__('NOW')}
          if drivers.custom3.available && (!drivers.fastest.available || !drivers.cheapest.available)
