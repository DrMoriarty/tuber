                  figcaption #{__('FROM')} &euro;#{drivers.custom3.price}
                else
                  figcaption #{__('Not found')}
              strong #{drivers.custom3.title}
              ul
                li #{__('Expected dates:')}
                li #{__('Departure:')} #{moment(parcel.pickupDate).format('LL')}
                li #{__('Arrival:')} #{moment(parcel.arriveDate).format('LL')}
                i.icons-plus
                | #{__('MORE INFO')}
              a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.custom3.id}&m=1&delivery=#{drivers.custom3.delivery}')
                | #{__('GET IT')}
                br
                | #{__('NOW')}
