extend layoutm

block header
  // header section
  section.header-section
    span.title #{user.firstname} #{user.lastname}
    .container
      ul
        li
          span 1. #{__('Price offers')}
        li
          a(href='/confirmation/#{parcel.id}?m=1') 2. #{__('Confirmation')}
        li
          a(href='#') 3. #{__('Payment')}
        li
          a(href='/dashboard?m=1') 4. #{__('Dashboard')}

block content
  // content
  section.section
    h1 #{__('Price Offers')}
    .container
      .form-sizes_scroll
        .scroll-size
          if drivers.cheapest.available
            article.offers
              figure
                img(src='/img/price_cheap.png', alt='')
                if drivers.cheapest.available
                  figcaption #{__('FROM')} &euro;#{drivers.cheapest.price}
                else
                  figcaption #{__('Not found')}
              strong #{__('cheapest')}
              ul
                li #{__('Expected dates:')}
                //li #{__('Departure:')} #{drivers.cheapest.pickupDate}
                //li #{__('Arrival:')} #{drivers.cheapest.arriveDate}
                li #{__('Departure:')} #{moment(parcel.pickupDate).format('LL')}
                li #{__('Arrival:')} #{moment(parcel.arriveDate).format('LL')}
              //a.more(href='#')
                i.icons-plus
                | #{__('MORE INFO')}
              a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.cheapest.id}&m=1&delivery=#{drivers.cheapest.delivery}')
                | #{__('GET IT')}
                br
                | #{__('NOW')}
            //else
              a.orange_button(href='#')
                | #{__('NOT FOUND')}
          if drivers.fastest.available
            article.offers
              figure
                img(src='/img/price_fast.png', alt='')
                if drivers.fastest.available
                  figcaption #{__('FROM')} &euro;#{drivers.fastest.price}
                else
                  figcaption #{__('Not found')}
              strong #{__('fastest')}
              ul
