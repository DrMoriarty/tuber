extend layout

block topbar
  .topbar-left
    ol.breadcrumb
      li.crumb-icon
        a(href='/admin')
          span.glyphicon.glyphicon-home
      li.crumb-active
        a(href='/admin/parcel') Parcels
  .topbar-right
    ol.breadcrumb
      a(href='/admin/parcel/new')
        button.btn.btn-info(class='button') Create new

block content
  .row
    .col-md-12
      .panel.panel-visible
        .panel-heading
          span.panel-title
            span.glyphicon.glyphicon-list-alt
            |  
        .panel-body
          table.table.table-hover
            thead
              tr
                th #
                th Sender
                th Size
                th Weight
                th Departure time
                th Arrival time
                th Status
            tbody
              if result
                each it in result
                  tr(onclick='javascript:location.href="/admin/parcel/#{it.id}"')
                    td= it.id
                    td #{it.owner.firstname} #{it.owner.lastname}
                    td #{it.length} x #{it.width} x #{it.depth}
                    td= it.weight
                    td= it.pickupDate
                    td= it.arriveDate
                    td= it.status
