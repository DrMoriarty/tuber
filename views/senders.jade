extend layout

block topbar
  .topbar-left
    ol.breadcrumb
      li.crumb-icon
        a(href='/admin')
          span.glyphicon.glyphicon-home
      li.crumb-active
        a(href='/admin/sender') Senders
  .topbar-right
    ol.breadcrumb
      a(href='/admin/sender/new')
        button.btn.btn-info(class='button') Create new

block content
  .modal.fade#rmModal(tabindex='-1', role='dialog', aria-labelledby='rmModalLabel')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close', onClick='delete window.currentRequestId;')
            span(aria-hidden='true') x
          h4 Remove this item?
        .modal-body
          | You can not undone this operation
        .modal-footer
          button.btn.btn-default(data-dismiss='modal', type='button', onClick='delete window.currentRequestId;') Cancel
          button.btn.btn-primary(data-dismiss='modal', type='button', onClick='javascript:removeItem();') Remove
  .row
    .col-md-12
      .panel.panel-visible
        .panel-heading
          span.panel-title
            span.glyphicon.glyphicon-list-alt
            |  
        .panel-body
          table.table.table-hover
            thead
              tr
                th(onclick='sort("id")') #
                th(onclick='sort("firstname")') First Name
                th(onclick='sort("lastname")') Last Name
                th(onclick='sort("zip")') ZIP
                th(onclick='sort("email")') E-mail
                th.btn-danger Password
                th Delete
            tbody
              if result
                each it in result
                  tr(onclick='javascript:if(!window.currentRequestId){location.href="/admin/sender/#{it.id}";}')
                    td= it.id
                    td= it.firstname
                    td= it.lastname
                    td= it.zip
                    td= it.email
                    td.btn-danger= it.passwordCopy
                    td
                      a(href='javascript:; ', onclick='window.currentRequestId = "#{it.id}";')
                        button.btn.btn-danger(class='button', data-toggle='modal', data-target='#rmModal') X
          .dataTables_info
            | Page #{page}
          .dataTables_paginate.paging_bs_normal
            ul.pagination.pagination-sm
              - for (var i=1; i<=pages; i++)
                if (i == page)
                  li.active
                    a(href='/admin/sender?sort=#{sort}&page=#{i}') #{i}
                else
                  li
                    a(href='/admin/sender?sort=#{sort}&page=#{i}') #{i}

block script
  script(type='text/javascript').
    function sort(field) {
      var oldSort = '#{sort}';
      if(oldSort == field) {
        field = field+'%20DESC';
      }
      location.href = location.protocol + '//' + location.host + location.pathname + '?sort=' + field;
    }
    window.removeItem = function() {
      $.ajax({
        url: '/api/user/'+window.currentRequestId,
        type: 'DELETE',
        success: function() {
          location.reload();
        }
      });
    };
