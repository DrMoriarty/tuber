doctype html
html
  head
    // Meta, title, CSS, favicons, etc.
    meta(charset='utf-8')
    title Fusion - A Responsive HTML5 Admin UI Template Theme
    meta(name='keywords', content='HTML5 Bootstrap 3 Admin Template UI Theme')
    meta(name='description', content='Fusion - A Responsive HTML5 Admin UI Template Theme')
    meta(name='author', content='AdminDesigns')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Font CSS (Via CDN)
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800')
    // Bootstrap CSS
    link(rel='stylesheet', type='text/css', href='vendor/bootstrap/css/bootstrap.min.css')
    // Theme CSS
    link(rel='stylesheet', type='text/css', href='css/vendor.css')
    link(rel='stylesheet', type='text/css', href='css/theme.css')
    link(rel='stylesheet', type='text/css', href='css/utility.css')
    link(rel='stylesheet', type='text/css', href='css/custom.css')
    // Favicon
    link(rel='shortcut icon', href='img/favicon.ico')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body.minimal.login-page
    script.
      var boxtest = localStorage.getItem('boxed'); if (boxtest === 'true') {document.body.className+=' boxed-layout';}
    a#return-arrow(href='dashboard.html')
      i.fa.fa-arrow-circle-left.fa-3x.text-light
      span.text-light
        | Return 
        br
        | to Theme
    // Start: Main
    #main
      #content
        .row
          #page-logo
            img.img-responsive(src='img/logos/logo-white.png', alt='logo')
        .row
          form.panel-bg(method="POST", action="/api/user")
            .panel
              .panel-heading
                span.panel-title
                  span.glyphicon.glyphicon-lock.text-purple2
                  |  Login
                span.panel-header-menu.pull-right.mr15.text-muted.fs12
                  | Not 
                  b Cynthia Blue?
              .panel-body
                .login-avatar
                  img(src='img/avatars/login.png', width='150', height='112', alt='avatar')
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-user
                    input.form-control(type='text', placeholder='First Name', name="firstname")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-user
                    input.form-control(type='text', placeholder='Last Name', name="lastname")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-envelope
                    input.form-control(type='email', placeholder='Email', name="email")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-home
                    input.form-control(type='text', placeholder='Address (line 1)', name="address1")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-home
                    input.form-control(type='text', placeholder='Address (line 2)', name="address2")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-home
                    input.form-control(type='text', placeholder='ZIP', name="zip")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-globe
                    input.form-control(type='text', placeholder='City', name="city")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-globe
                    input.form-control(type='text', placeholder='Country', name="country")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-phone
                    input.form-control(type='text', placeholder='Phone number', name="phone")
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input.form-control(type='password', placeholder='Password', name="password")
              .panel-footer
                span.text-muted.fs12.lh30
                  a  
                input.btn.btn-sm.bg-purple2.pull-right(type="submit", value="Signup")
                .clearfix
    // End: Main
    .overlay-black
    // Google Map API
    script(type='text/javascript', src='http://maps.google.com/maps/api/js?sensor=true')
    // jQuery
    script(type='text/javascript', src='vendor/jquery/jquery-1.11.1.min.js')
    script(type='text/javascript', src='vendor/jquery/jquery_ui/jquery-ui.min.js')
    // Bootstrap
    script(type='text/javascript', src='vendor/bootstrap/js/bootstrap.min.js')
    // Page Plugins
    script(type='text/javascript', src='vendor/plugins/backstretch/jquery.backstretch.min.js')
    // Theme Javascript
    script(type='text/javascript', src='js/utility/spin.min.js')
    script(type='text/javascript', src='js/utility/underscore-min.js')
    script(type='text/javascript', src='js/main.js')
    script(type='text/javascript', src='js/ajax.js')
    script(type='text/javascript', src='js/custom.js')
    script(type='text/javascript').
      jQuery(document).ready(function () {
      "use strict";
      // Init Theme Core
      Core.init();
      // Enable Ajax Loading
      Ajax.init();
      // Init Full Page BG(Backstretch) plugin
      $.backstretch("img/stock/splash/2.jpg");
      });
