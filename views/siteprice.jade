extend layoutsite

block header
  // header section
  section.header-section
    .container
      ul
        li
          span 1. #{__('Price offers')}
        li
          a(href='/confirmation/#{parcel.id}') 2. #{__('Confirmation')}
        li
          a(href='#') 3. #{__('Payment')}
        li
          a(href='/dashboard') 4. #{__('Dashboard')}
      span.title #{user.firstname} #{user.lastname}

block content
  // content
  section.section
    h1 #{__('Price Offers')}
    .container
      article.offers
        figure
          img(src='/img/price_cheap.png', alt='')
          if drivers.cheapest.available
            figcaption #{__('FROM')} &euro;#{drivers.cheapest.price}
          else
            figcaption #{__('Not found')}
        strong #{__('cheapest')}
        ul
          li #{__('Expected dates:')}
          li #{__('Departure:')} #{drivers.cheapest.pickupDate}
          li #{__('Arrival:')} #{drivers.cheapest.arriveDate}
        if drivers.cheapest.available
          a.more(href='#')
            i.icons-plus
            | #{__('MORE INFO')}
          a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.cheapest.id}')
            | #{__('GET IT')}
            br
            | #{__('NOW')}
        else
          a.orange_button(href='#')
            | #{__('NOT FOUND')}
      article.offers
        figure
          img(src='/img/price_fast.png', alt='')
          if drivers.fastest.available
            figcaption #{__('FROM')} &euro;#{drivers.fastest.price}
          else
            figcaption #{__('Not found')}
        strong #{__('fastest')}
        ul
          li #{__('Expected dates:')}
          li #{__('Departure:')} #{drivers.fastest.pickupDate}
          li #{__('Arrival:')} #{drivers.fastest.arriveDate}
        if drivers.fastest.available
          a.more(href='#')
            i.icons-plus
            | #{__('MORE INFO')}
          a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.fastest.id}')
            | #{__('GET IT')}
            br
            | #{__('NOW')}
        else
          a.orange_button(href='#')
            | #{__('NOT FOUND')}
    article.offers
        figure
          img(src='/img/price_eco.png', alt='')
          if drivers.ecologiest.available
            figcaption #{__('FROM')} &euro;#{drivers.ecologiest.price}
          else
            figcaption #{__('Not found')}
        strong #{__('ecologiest')}
        ul
          li #{__('Expected dates:')}
          li #{__('Departure:')} #{drivers.ecologiest.pickupDate}
          li #{__('Arrival:')} #{drivers.ecologiest.arriveDate}
        if drivers.ecologiest.available
          a.more(href='#')
            i.icons-plus
            | #{__('MORE INFO')}
          a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.ecologiest.id}')
            | #{__('GET IT')}
            br
            | #{__('NOW')}
        else
          a.orange_button(href='#')
            | #{__('NOT FOUND')}
      .clear
      if more
        a.offers-more(href='#') #{__('SEE MORE OFFERS')}
