            | MORE INFO
          a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.fastest.id}')
            | GET IT
            br
            | NOW
        else
          a.orange_button(href='#')
            | NOT FOUND
    article.offers
        figure
          img(src='/img/price_eco.png', alt='')
          if drivers.ecologiest.available
            figcaption FROM &euro;#{drivers.ecologiest.price}
          else
            figcaption Not found
        strong ecologiest
        ul
          li Expected dates:
          li Departure: #{drivers.ecologiest.pickupDate}
          li Arrival: #{drivers.ecologiest.arriveDate}
        if drivers.ecologiest.available
          a.more(href='#')
            i.icons-plus
            | MORE INFO
          a.orange_button(href='/confirmation/#{parcel.id}?driverId=#{drivers.ecologiest.id}')
            | GET IT
            br
            | NOW
        else
          a.orange_button(href='#')
            | NOT FOUND
      .clear
      if more
        a.offers-more(href='#') SEE MORE OFFERS
